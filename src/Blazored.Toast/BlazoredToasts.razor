@inherits BlazoredToastsBase

@if (ToastList.Any())
{
    <div class="toast-container @Css">
        <CascadingValue Value=this>
            @foreach (var toast in ToastList.OrderBy(x=>x.TimeStamp))
            {
                <BlazoredToast ToastSettings="toast.ToastSettings" ToastId="toast.Id" ToastOptions="toast.Options" />
            }
        </CascadingValue>
    </div>
}
